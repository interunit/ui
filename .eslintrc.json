{
  "settings": {
    "import/resolver": {
      "typescript": {}
    }
  },
  "extends": ["eslint:recommended"],
  "parser": "@typescript-eslint/parser",
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  },
  "parserOptions": {
    "project": true
  },
  "plugins": ["@typescript-eslint", "import"],
  "overrides": [
    {
      "env": {
        "jest": true
      },
      "files": ["*.test.js"]
    }
  ],
  "rules": {
    "@typescript-eslint/consistent-type-imports": "error"
  },
  "globals": {
    "React": true,
    "JSX": true
  }
}
