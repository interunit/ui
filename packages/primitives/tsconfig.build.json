{

  "extends": "./tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "typeRoots": ["node_modules/@types", "dist/typescript"],
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "declaration": true,
    "jsx": "react",
    "lib": ["DOM", "ESNext", "DOM.Iterable"],
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "module": "commonjs",
    "target": "es6",
    "composite": true
  },
  "include": ["src/**/*"]
}
