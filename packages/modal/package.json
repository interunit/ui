{
  "name": "@interunit/modal",
  "version": "0.0.7",
  "description": "A low-level component to help display content on top of the current page or view",
  "homepage": "https://github.com/interunit/ui#readme",
  "bugs": {
    "url": "https://github.com/interunit/ui/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/interunit/ui.git"
  },
  "license": "ISC",
  "author": "Kyle McDonald",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "react-native": "src/index.ts",
  "types": "dist/index.d.ts",
  "scripts": {
    "build:package": "tsup src/index.ts --dts --minify --format cjs,esm --clean --sourcemap",
    "format": "prettier \"**/*.{ts,tsx,md,mdx,json}\" --check",
    "format:fix": "prettier \"**/*.{ts,tsx,md,mdx,json}\" --write",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test:unit": "jest --config ./jest.config.mjs --coverage",
    "watch:package": "tsup src/index.ts --dts --format cjs,esm  --watch"
  },
  "dependencies": {
    "@interunit/a11y": "*",
    "@interunit/config": "*",
    "@interunit/primitives": "*",
    "focus-trap-react": "^10.2.1"
  },
  "devDependencies": {
    "@types/react": "18.2.21",
    "@types/react-dom": "18.2.5",
    "@types/react-native": "^0.72.2",
    "typescript": "^5.2.2"
  },
  "peerDependencies": {
    "react": "^18.2.0"
  }
}
