{
  "name": "interunit",
  "version": "0.0.1",
  "description": "",
  "scripts": {
    "dev:all": "turbo run dev:all",
    "dev:docs": "turbo run dev:docs",
    "BARE:lint:eslint": "eslint --ext .ts,.tsx .",
    "lint:eslint": "turbo run BARE:lint:eslint",
    "lint:eslint:fix": "turbo run BARE:lint:eslint -- --fix",
    "BARE:lint:tsc": "tsc",
    "lint:tsc": "turbo run BARE:lint:tsc",
    "BARE:test:unit": "jest",
    "test:unit": "turbo run BARE:test:unit",
    "BARE:test:unit:ci": "jest --ci",
    "test:unit:ci": "turbo run BARE:test:unit:ci",
    "BARE:format:ci": "prettier --check './**/*.{js,jsx,ts,tsx,css,md,json}' --config ./.prettierrc",
    "format:ci": "turbo run BARE:format:ci",
    "format:fix": "prettier --write './**/*.{js,jsx,ts,tsx,css,md,json}' --config ./.prettierrc",
    "preconstruct:build": "preconstruct build",
    "preconstruct:dev": "preconstruct dev",
    "create:package": "npx hygen create package",
    "util:clean": "rm -rf node_modules **/node_modules **/**/node_modules **/**/**/node_modules && rm -rf $TMPDIR/react-* && watchman watch-del-all && yarn cache clean",
    "util:delete-dist": "rm -rf packages/**/dist",
    "postinstall": "husky install",
    "changeset:add": "changeset add",
    "changeset:version": "changeset version",
    "changeset:publish": "npm run util:delete-dist && preconstruct build && changeset publish",
    "husky": "postinstall"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "npm run lint:eslint:fix",
      "npm run format:fix"
    ]
  },
  "devDependencies": {
    "@babel/preset-env": "^7.21.5",
    "@babel/preset-react": "^7.22.5",
    "@babel/preset-typescript": "^7.21.5",
    "@changesets/cli": "^2.26.2",
    "@types/jest": "^29.5.3",
    "@types/jest-axe": "^3.5.5",
    "@manypkg/cli": "^0.20.0",
    "@preconstruct/cli": "^2.7.0",
    "@react-native-community/eslint-config": "^3.2.0",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^14.0.0",
    "@trivago/prettier-plugin-sort-imports": "^4.1.1",
    "@types/node": "^20.3.1",
    "@types/react": "^18.2.12",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard-with-typescript": "^35.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.32.2",
    "husky": "^8.0.3",
    "jest": "^29.6.2",
    "jest-environment-jsdom": "^29.6.2",
    "jest-axe": "^8.0.0",
    "lint-staged": "^14.0.0",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "turbo": "^1.10.12",
    "typescript": "^5.1.3"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "preconstruct": {
    "packages": [
      "packages/*"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/interunit/ui.git"
  },
  "author": "Kyle McDonald",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/interunit/ui/issues"
  },
  "homepage": "https://github.com/interunit/ui#readme",
  "private": true
}
